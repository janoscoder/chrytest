<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="89dp">

    <Button
            android:text="@string/text_btn_act_choice"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:id="@+id/btn_act_choice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="onBtnActChoice"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/btn_choice_act_settings"
            app:layout_constraintVertical_bias="0.19" app:layout_constraintHorizontal_bias="0.56"/>
    <Button
            android:text="@string/configuration_de_l_activit_de_choix"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:id="@+id/btn_choice_act_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_act_choice"
            app:layout_constraintHorizontal_bias="0.704" android:onClick="onBtnActChoiceSettings"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.19999999"/>

</android.support.constraint.ConstraintLayout>